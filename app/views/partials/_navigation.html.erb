<header>
  <nav  class="navbar navbar-expand-lg navbar-dark shadow color-primary-bg"
        style="z-index: 1;">
    <a class="navbar-brand" href="#">MARKETPLACE</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <%= link_to "Users", users_path, class:"nav-item nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Products", products_path, class:"nav-item nav-link" %>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <% unless user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class:"nav-item nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Create account", new_user_registration_path, class:"nav-item nav-link" %>
            </li>
          <%end%>
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.first_name %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                  <%= link_to "My Products",
                  my_products_path,
                  class:"dropdown-item" %>

                  <%= link_to "Edit My Profile",
                  edit_user_registration_path,
                  class:"dropdown-item", id: "edit_profile" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "Log out",
                  destroy_user_session_path,
                  method: :delete,
                  class:"dropdown-item be-red" %>
              </div>
            </li>
            <li class="nav-item">
              <% if current_user.admin_role? %>
                <%= link_to "Dashboard",
                    "/admin",
                    class:"nav-item nav-link",
                    id: "dashboard" %>
              <% end %>
            </li>
          <%end%>
        </ul>
      </form>
    </div>
  </nav>
</header>
