<div class="top-space">
  <div class="container">
    <h1 class="be-white">PRODUCTS</h1><br>
    <div  class="card-deck"
          data-aos="zoom-out"
          data-aos-duration="1200">
      <% @products.each do |product| %>
        <div class="card shadow">
          <% @img.find do |img| %>
            <% if img.product_id == product.id %>
              <%= image_tag img.image.url(), class:"card-img-top", alt:"Card image cap" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h3 class="card-title"><%= product.name %></h3>
            <ul class="list-group list-group-fluid">
              <li class="list-group-item">Description: <%= product.description %></li>
              <li class="list-group-item">Quantity: <%= product.quantity %></li>
              <li class="list-group-item">Price: $<%= product.price %></li>
            </ul>
          </div>
          <div class="card-footer">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm">
                  <center>
                    <%= link_to 'Show', product_path(product), class: 'btn btn-success' %>
                  </center>
                </div>
                <% if user_signed_in? %>
                  <div class="col-sm">
                    <center>
                      <%= link_to 'Archive', archive_path(product), method: :put,
                          type: 'button', class: 'btn btn-danger' %>
                    </center>
                  </div>
                  <div class="col-sm">
                    <center>
                      <%= link_to 'Edit', edit_product_path(product),
                          type: 'button', class: 'btn btn-primary' %>
                    </center>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div><br>
    <%=  link_to 'Create Product', new_product_path, class: 'btn btn-primary col' %>
    <%= will_paginate @products %>
  </div>
</div><br>
