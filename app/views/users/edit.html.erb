<div class="top-space">
  <div  class="container shadow background-white"
        style="width: 1200px;
                  height: 100%;
                  border-radius: 5px;">
    <h1 class="text-center color-secondary">EDIT USER</h1>
    <%= form_for(@user) do |user| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputFirstName">First Name</label>
          <%= user.text_field :first_name, class:"form-control", placeholder:"First Name" %>
        </div>
        <div class="form-group col-md-6">
          <label for="inputLastName">Last Name</label>
          <%= user.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail">Email</label>
          <%= user.text_field :email, class:"form-control", placeholder:"Email" %>
        </div>
        <div class="form-group col-md-6">
          <label for="inputCellphone">Cellphone</label>
          <%= user.text_field :cellphone, class:"form-control", placeholder:"Cellphone" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Address</label>
        <%= user.text_field :address, class:"form-control", placeholder:"Address" %>
      </div>
      <%= user.submit "Save", class:"btn color-secondary-bg be-white"%>
    <%end%><br>
  </div>
</div>
