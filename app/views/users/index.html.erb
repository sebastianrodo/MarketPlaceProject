<div class="top-space">
  <div class="container">
    <h1 class="be-white">USERS</h1>
    <table class="table" style="box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.15)">
      <thead class="thead-light">
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">CellPhone</th>
          <th scope="col">Address</th>
          <th scope="col">Show</th>
        </tr>
      </thead>
      <tbody>
          <% @users.each do |user| %>
            <tr class="table-light">
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.cellphone %></td>
              <td><%= user.address %></td>
              <td><%= link_to 'Show', user_path(user), class: 'btn btn-success', id: 'user_show' %></td>
            </tr>
          <%end%>
      </tbody>
    </table>
  </div>
</div>
