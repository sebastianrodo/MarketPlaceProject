<div class="top-space">
  <div class="container">
    <h1 class="text-center be-light-blue">USERS</h1>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">CellPhone</th>
          <th scope="col">Address</th>
          <th scope="col">Show</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
          <% @users.each do |user| %>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.cellphone %></td>
              <td><%= user.address %></td>
              <td><%= link_to 'Show', user_path(user), class: 'btn btn-success' %></td>
              <td><%= link_to 'Delete', user, method: :delete,
                      type: 'button', class: 'btn btn-danger'%></td>
            </tr>
          <%end%>
      </tbody>
    </table>
    <%=  link_to 'Create User', new_user_path, class: 'btn btn-primary col' %>
  </div>
</div>
